@using Articulate
@inherits UmbracoViewPage<Umbraco.Core.Models.IPublishedContent>

<footer class="mdl-mini-footer">
    <div class="mdl-mini-footer--left-section">
        <a title="Share on Facebook" target="_blank" href="http://www.facebook.com/sharer.php?u=@Model.UrlWithDomain()"
           class="mdl-mini-footer--social-btn social-btn social-btn__twitter">
            <span class="visuallyhidden">Twitter</span>
        </a>
        <a title="Share on Twitter" target="_blank" href="http://twitter.com/share?text={{title}}&amp;url=@Model.UrlWithDomain()"
           class="mdl-mini-footer--social-btn social-btn social-btn__blogger">
            <span class="visuallyhidden">Facebook</span>
        </a>
        <a title="Share on Google Plus" target="_blank" href="https://plus.google.com/share?url=@Model.UrlWithDomain()"
           class="mdl-mini-footer--social-btn social-btn social-btn__gplus">
            <span class="visuallyhidden">Google Plus</span>
        </a>
    </div>
    <div class="mdl-mini-footer--right-section">
        <button class="mdl-mini-footer--social-btn social-btn__share">
            <i class="material-icons" role="presentation">share</i>
            <span class="visuallyhidden">share</span>
        </button>
    </div>
</footer>